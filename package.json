{
	"name": "gezcez-backend",
	"version": "1.0.50",
	"scripts": {
		"deploy": "git pull && systemctl restart api.gezcez.com",
		"build": "bun build --outdir=dist --target=bun ./src/index.ts -e class-transformer/storage -e @nestjs/microservices",
		"dev": "bun run --watch src/index.ts",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start:prod": "bun run dist/index.js",
		"lint": "eslint \"./src/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@libsql/client": "^0.15.9",
		"@nestjs/common": "^11.0.1",
		"@nestjs/core": "^11.0.1",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/platform-socket.io": "^11.1.3",
		"@nestjs/platform-ws": "^11.1.3",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/websockets": "^11.1.3",
		"@scalar/nestjs-api-reference": "^0.5.6",
		"@shared": "file:../common-utilities",
		"@types/supertest": "^6.0.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"drizzle-orm": "^0.44.2",
		"jose": "^6.0.11",
		"rxjs": "^7.8.2",
		"swagger-ui-express": "^5.0.1"
	},
	"devDependencies": {
		"@types/bun": "^1.2.17",
		"@types/express": "^5.0.3",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"bun-types": "latest",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9.30.1",
		"supertest": "^7.1.1"
	},
	"module": "src/index.js",
	"type": "module",
	"private": true,
	"peerDependencies": {
		"typescript": "^5.8.3"
	}
}